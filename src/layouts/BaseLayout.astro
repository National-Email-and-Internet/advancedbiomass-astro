---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "All you wanted to know about biomass handling but were afraid to ask." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <header class="bg-green-800 text-white shadow-lg">
      <div class="container mx-auto px-4 py-6">
        <div class="text-center mb-4">
          <img 
            src="/forest.jpg" 
            alt="Biomass Handling" 
            class="w-full h-32 object-cover rounded-lg mb-4"
          />
          <h1 class="text-4xl font-bold mb-2">
            <a href="/" class="hover:text-green-200">Biomass Handling</a>
          </h1>
          <h2 class="text-xl text-green-100">
            All you wanted to know about biomass handling but were afraid to ask.
          </h2>
        </div>
        
        <nav class="border-t border-green-700 pt-4">
          <ul class="flex flex-wrap justify-center space-x-6">
            <li><a href="/" class="hover:text-green-200 font-medium">Home</a></li>
            <li><a href="/about/" class="hover:text-green-200 font-medium">About</a></li>
            <li><a href="/about-the-author/" class="hover:text-green-200 font-medium">About the Author</a></li>
            <li><a href="/blog/" class="hover:text-green-200 font-medium">Articles</a></li>
            <li><a href="/recent-projects/" class="hover:text-green-200 font-medium">Projects</a></li>
            <li><a href="/contact/" class="hover:text-green-200 font-medium">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>
    
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    
    <footer class="bg-gray-800 text-white py-8 mt-12">
      <div class="container mx-auto px-4 text-center">
        <div class="mb-4">
          <h3 class="text-lg font-bold mb-2">Advanced Biomass Consulting Inc.</h3>
          <p class="text-gray-300">Box 214, 47 – 20821 Fraser Highway, Langley, BC, Canada, V3A 4G7</p>
          <p class="text-gray-300">Tel: 1-604-505-5857 | Email: pjanze@telus.net</p>
        </div>
        <p class="text-gray-400 text-sm">
          © 2024 Advanced Biomass Consulting Inc. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>