---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout title="Contact Us - Biomass Handling">
  <div class="max-w-4xl mx-auto">
    <div class="grid md:grid-cols-2 gap-8">
      <div>
        <ContactForm />
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Get in Touch</h2>
        
        <div class="space-y-4">
          <p class="text-gray-700">
            Advanced Biomass Consulting Inc. provides expert consulting services for 
            biomass handling systems, equipment design, and process optimization.
          </p>
          
          <div class="bg-green-50 border border-green-200 rounded-lg p-4">
            <h3 class="font-semibold text-green-900 mb-2">Paul Janzé</h3>
            <p class="text-green-800 text-sm mb-3">Principal Consultant</p>
            <p class="text-green-700 text-sm">
              Over 30 years of experience in biomass handling system design 
              and optimization for the energy and forest products industries.
            </p>
          </div>
          
          <div class="space-y-3">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div class="text-sm text-gray-700">
                <p>Box 214, 47 – 20821 Fraser Highway</p>
                <p>Langley, BC, Canada, V3A 4G7</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span class="text-sm text-gray-700">1-604-505-5857</span>
            </div>
            
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <a href="mailto:pjanze@telus.net" class="text-sm text-green-600 hover:text-green-700">
                pjanze@telus.net
              </a>
            </div>
          </div>
          
          <div class="pt-4 border-t border-gray-200">
            <h4 class="font-medium text-gray-900 mb-2">Services</h4>
            <ul class="text-sm text-gray-700 space-y-1">
              <li>• Biomass handling system design</li>
              <li>• Process optimization consulting</li>
              <li>• Equipment selection and specification</li>
              <li>• Troubleshooting and performance improvement</li>
              <li>• Feasibility studies and project consultation</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>